FROM php:7-apache
RUN apt-get update && a2enmod rewrite && apt-get install -y --no-install-recommends locales locales-all libfreetype6-dev libjpeg-dev libpng-dev libc-client-dev libkrb5-dev msmtp imagemagick libmagickwand-dev && pecl install imagick && docker-php-ext-configure imap --with-kerberos --with-imap-ssl && docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ && docker-php-ext-enable imagick && docker-php-ext-install intl imap exif gd mbstring && usermod -u 1000 www-data && groupmod -g 1000 www-data && apt-get clean -y && rm -rf /var/lib/apt/lists/*
